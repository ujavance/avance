/* 弹出框颜色 */
.modal-header {
    color: #fff;
}
/* 提示框 - 头部颜色 */
.modal-header {
    background-color: rgba(0,0,0,.6);
    color: #fff;
}
.head-success {
    background-color: #009688;
}
.head-warning {
    background-color: #f7ec7d;
    color: #000;
}
.head-normal {
    background-color: rgba(0,0,0,.6);
}
.head-danger {
    background-color: #d9534f;
}